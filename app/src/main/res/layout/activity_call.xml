<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CallActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingRight="16dp"
        android:background="@color/white"
        android:gravity="right"
        android:id="@+id/call"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">

    <com.game.senjad.base.components.IranSansTextView
        android:gravity="right"
        android:textColor="@color/primary"
        android:text=" تماس با پشتیبانی "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>
    <com.game.senjad.base.components.IranSansEditText
        android:gravity="right"
        android:id="@+id/message_text"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:textSize="12sp"
        android:background="@drawable/m_to_senjad"
        android:hint="ارسال درخواست"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <com.game.senjad.base.components.IranSansButton
        android:layout_width="match_parent"
        android:text="ارسال"
        android:gravity="center"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/white"
        android:background="@color/material_blue_grey_80"
        android:id="@+id/button"
        android:layout_height="48dp" />
</LinearLayout>