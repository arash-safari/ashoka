<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/defultRankingView"
        android:layout_width="match_parent"
        android:layout_height="60dp">

    <LinearLayout
        android:layout_width="100dp"
        android:orientation="horizontal"
        android:id="@+id/rank"
        android:layout_alignParentRight="true"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_height="match_parent">
        <com.game.senjad.base.components.IranSansTextView
            android:id="@+id/rank_text"
            android:gravity="center"
            android:visibility="gone"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/rank_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitEnd"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_trophy"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/scorel"
        android:layout_toLeftOf="@+id/rank"
        android:layout_height="match_parent">
        <com.game.senjad.base.components.IranSansTextView
            android:gravity="right|center_vertical"
            android:text="امام صادق"
            android:id="@+id/second_param_text"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <com.game.senjad.base.components.IranSansTextView
            android:gravity="right|center_vertical"
            android:id="@+id/name_text"
            android:text="سعید"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/scorel"
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_alignParentLeft="true"
        android:layout_height="match_parent">
        <com.game.senjad.base.components.IranSansTextView
            android:id="@+id/score_text"
            android:gravity="center"
            android:text="1000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/material_blue_grey_80"/>
</LinearLayout>